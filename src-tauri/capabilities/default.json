{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main", "image-window-*"],
  "permissions": [
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "exec-sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": "\\S+"
            }
          ]
        },
        {
          "name": "exec-cmd",
          "cmd": "cmd.exe",
          "args": [
            "/C",
            {
              "validator": "\\S+"
            }
          ]
        },
        {
          "name": "exec-powershell",
          "cmd": "powershell.exe",
          "args": [
            "-Command",
            {
              "validator": "\\S+"
            }
          ]
        }
      ]
    },
    "core:default",
    "opener:default",
    "dialog:default",
    "core:window:allow-set-title",
    "core:window:allow-title",
    "shell:default",
    "core:webview:allow-create-webview-window",
    "fs:default",
    "fs:allow-read-dir"
  ]
}
