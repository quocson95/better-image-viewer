{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Better Image Viewer",
  "version": "1.0.0",
  "identifier": "com.pyrus.better-image-viewer",

  "build": {
    "frontendDist": "../src"
  },
  "plugins": {
  },
  "app": {
    "withGlobalTauri": true,

    "windows": [
      {
        "label": "main",
        "title": "Better Image Viewer",
        "width": 800,
        "height": 600,
        "backgroundColor": "#111111",
        "transparent": false,
        "maximized": true
      }
    ],

    "security": {
      "csp": null,

      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/icon.ico"
    ],
    "fileAssociations": [
        {
          "ext": [
            "png", "jpg", "jpeg", "bmp", "gif", "avif",
            "tif", "tiff", "webp", "ico", "svg"
          ],
          "mimeType": "image/*",
          "rank": "Default"
        }
    ]
  }

}
